@model IEnumerable<Gestion.Models.Empleados>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NOMBRE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CEDULA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TANDA_LABOR)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCH_INGRESO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ESTADO)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEDULA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TANDA_LABOR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FCH_INGRESO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ESTADO)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
